<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

    <ImageView
        android:id="@+id/btn_image_type"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/imobile"/>

    <!--<TextView-->
        <!--android:id="@+id/tv_distance"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="example"-->
        <!--android:textColor="@android:color/holo_green_dark"-->
        <!--android:background="@android:color/white"/>-->

    <Button
        android:id="@+id/btn_start_arXX4"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_image_type"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/ar_btn_selector_button_poi"
        android:textColor="#2ea5e1"
        android:text="名称"
        android:textSize="18sp"/>
        <!-- android:text="SuperMap Academy Research Center(SMARC)" -->
    <Button
        android:id="@+id/btn_poi_name"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_start_arXX4"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/ar_btn_selector_button_poi2_x"
        android:textColor="#ffffff"
        android:text="超图研究院"
        android:textSize="20sp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_distance"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_poi_name"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/ar_btn_selector_button_poi2_x"
        android:textColor="#ffffff"
        android:text="176m"
        android:textSize="20sp"
        android:textAllCaps="false"
        />

    </RelativeLayout>


</LinearLayout>